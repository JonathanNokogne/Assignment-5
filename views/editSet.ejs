<!DOCTYPE html>
<html>
<head>
    <title>Edit Set</title>
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .form-container {
            background-color: #fff;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 2rem auto;
        }
        .form-container h1 {
            text-align: center;
            margin-bottom: 1rem;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 0.25rem;
        }
        .form-group button {
            display: inline-block;
            padding: 0.75rem;
            color: #fff;
            background-color: #1f2937;
            border: none;
            border-radius: 0.25rem;
            cursor: pointer;
        }
        .btn-delete {
            display: inline-block;
            padding: 0.75rem;
            color: #fff;
            background-color: #e3342f;
            border: none;
            border-radius: 0.25rem;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { page: '' }) %>
    <div class="form-container">
        <h1>Edit Set - <%= set.name %></h1>
        <form action="/lego/editSet" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= set.name %>" required>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" value="<%= set.year %>" required>
            </div>
            <div class="form-group">
                <label for="num_parts">Number of Parts:</label>
                <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required>
            </div>
            <div class="form-group">
                <label for="img_url">Image URL:</label>
                <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required>
            </div>
            <div class="form-group">
                <label for="theme_id">Theme:</label>
                <select id="theme_id" name="theme_id" required>
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? 'selected' : '' %>><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="set_num">Set Number:</label>
                <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="cursor-not-allowed">
            </div>
            <div class="form-group">
                <button type="submit">Update Set</button>
                <a href="/lego/deleteSet/<%= set.set_num %>" class="btn-delete">Delete Set</a>
            </div>
        </form>
    </div>
</body>
</html>
